{
  "name": "everest-forms-extension",
  "title": "Everest Forms - Extension",
  "version": "1.0.0",
  "homepage": "https://wpeverest.com/wordpress-plugins/everest-forms/extension/",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/wpeverest/everest-forms/everest-forms-extension.git"
  },
  "license": "GPL-3.0+",
  "main": "Gruntfile.js",
  "scripts": {
    "lint:js": "eslint assets/js --ext=js",
    "git:update-hooks": "rm -r .git/hooks && node ./node_modules/husky/husky.js install"
  },
  "devDependencies": {
    "autoprefixer": "~9.5.0",
    "eslint": "~5.15.3",
    "grunt": "~1.0.4",
    "grunt-checktextdomain": "~1.0.1",
    "grunt-contrib-compress": "~1.4.3",
    "grunt-contrib-cssmin": "~3.0.0",
    "grunt-contrib-jshint": "~2.1.0",
    "grunt-contrib-uglify": "~4.0.1",
    "grunt-contrib-watch": "~1.1.0",
    "grunt-phpcs": "~0.4.0",
    "grunt-postcss": "~0.9.0",
    "grunt-rtlcss": "~2.0.1",
    "grunt-sass": "~3.0.2",
    "grunt-stylelint": "~0.10.1",
    "grunt-wp-i18n": "~1.0.3",
    "husky": "~1.3.1",
    "lint-staged": "~13.1.0",
    "node-sass": "~4.11.0",
    "stylelint": "~9.10.1",
    "stylelint-config-wordpress": "~13.1.0"
  },
  "engines": {
    "node": ">=8.9.3",
    "npm": ">=5.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.php": [
        "php -d display_errors=1 -l",
        "composer run-script phpcs-pre-commit"
      ],
      "*.scss": [
        "stylelint --syntax=scss --fix",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "*.min.js",
      "*.css"
    ]
  }
}
